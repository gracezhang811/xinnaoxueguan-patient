/* pages/course/coursedetail.wxss */
.courseimage {
  position:absolute;
  top:0rpx;
  left:0rpx;
  width: 750rpx;
  height: 350rpx;
}
.coursetitle {
  position:absolute;
  top:290rpx;
  width: 750rpx;
  height: 40rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden; 
  text-overflow:ellipsis;
}
.navbar{
  position:absolute;
  top:355rpx;
  width: 750rpx;
  height: 60rpx;
  flex: none;
  display: flex;
  background: #eeeeee;
  z-index: 50;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #666666;
  font-family: Microsoft YaHei;
}
.navbar .item.active{
  color: #ec9e14;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
} 
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #ec9e14;
  font-size: 30rpx;
  color: #666666;
  font-family: Microsoft YaHei;
} 

.courseperiodarea {
  position:absolute;
  top:415rpx;
  width: 750rpx;
  bottom:90rpx;
}

.perioditem {
   width: 100%;
   height: 50rpx;
   position: relative;
}

.periodtitle {
  position: absolute;
  width: 570rpx;
  height: 50rpx;
  font-size: 28rpx;
  text-align: left;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden; 
  text-overflow:ellipsis;
  margin-left: 30rpx; 
  margin-top: 10rpx; 
}

.buttonarea {
  position:absolute;
  width: 750rpx; 
  height: 70rpx;
  bottom:10rpx;
}

.coursebutton {
  position: absolute;
  left:500rpx;
  width: 240rpx;
  height: 70rpx;
  display: -webkit-box;
  line-height: 70rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden; 
  text-overflow:ellipsis; 
  text-align: center;
  font-size: 32rpx;
  background-color: #5694DF;
  color: #ffffff;
  border-radius: 5rpx;
}