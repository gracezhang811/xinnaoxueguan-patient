  text-align: left;
  font-size: 24rpx;
}

.courseinfo {
  position: absolute;
  display: -webkit-box;
  left:280rpx;
  top:100rpx;
  width: 450rpx;
  height: 52rpx;
  line-height: 26rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden; 
  text-overflow:ellipsis;
  text-align: left;
  font-size: 22rpx;
  color: #666666;
