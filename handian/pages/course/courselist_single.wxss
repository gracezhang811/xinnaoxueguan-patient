.courseitem {
   width: 100%;
   height: 192rpx;
   position: relative;
}

.coursecover {
  position: absolute;
  left:20rpx;
  top:20rpx;
  width: 240rpx;
  height: 152rpx;
}

.coursetitle {
  position: absolute;
  display: -webkit-box;
  left:280rpx;
  top:30rpx;
  width: 450rpx;
  height: 60rpx;
  line-height: 30rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
