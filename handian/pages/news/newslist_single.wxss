/* pages/news/newslist_notab.wxss */

.newsitem {
   width: 100%;
   height: 190rpx;
   position: relative;
}

.newscover {
  position: absolute;
  left:20rpx;
  top: 20rpx;
  width: 230rpx;
  height: 150rpx;
}


.newstitle {
  position: absolute;
  display: -webkit-box;
  top: 40rpx;
  left:270rpx;
  width: 460rpx;
  line-height: 30rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden; 
  text-overflow:ellipsis;
  text-align: left;
  font-size: 24rpx;
}

.newscontent {
  position: absolute;
  display: -webkit-box;
  left:270rpx;
  top:80rpx;
  width: 460rpx;
  height: 90rpx;
  line-height: 36rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden; 
  text-overflow:ellipsis;
  text-align: left;
  font-size: 22rpx;
  color: #666666;
}